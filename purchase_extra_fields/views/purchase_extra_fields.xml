<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_purchase_extra_form" model="ir.ui.view">
        <field name="name">view.purchase.extra.form</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.order.form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='date_approve']" position="after">
                <field name="motivo_de_uso"/>
            </xpath>
        </field>
    </record>
</odoo>
