<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_purchase_extra_form" model="ir.ui.view">
        <field name="name">view.purchase.extra.form</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_ref']" position="after">
                <field name="motivo_de_uso"/>
            </xpath>
        </field>
    </record>

    <record id="filtro_motivo_uso" model="ir.ui.view">
        <field name= "name">filtro.motivo.uso</field>
        <field name= "model">purchase.order </field>
        <field name= "arch" type="xml">
            <search>
                <field name="motivo_de_uso" />
            </search>
    </record>
</odoo>
